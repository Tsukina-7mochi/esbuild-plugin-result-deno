{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "lib": [
      "ESNext",
      "deno.window"
    ]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "options": {
      "singleQuote": true
    }
  },
  "tasks": {
    "build": "deno run --allow-run --allow-read --allow-write --allow-env --allow-net ./example/build.ts"
  }
}
